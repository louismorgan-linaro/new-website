---
import CldImage from "../../Cloudinary/CldImage.astro";
const props = Astro.props;
const { style, absolute_image } = props;
console.log(props.absolute_image);
---

<div class={(style || "") + " relative w-full "}>
  {
    absolute_image?.image ? (
      <CldImage
        src={absolute_image?.image || ""}
        class="md:absolute right-0 object-cover overflow-clip m-0 w-full md:w-1/2 h-52 md:h-full"
      />
    ) : (
      <div />
    )
  }
  <div
    class="sm:max-w-xl md:max-w-2xl lg:max-w-3xl mx-auto px-4 text-color-inherit"
  >
    <slot />
  </div>
</div>
